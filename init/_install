# step 1: quick download; we'll set up git later
download_repo() {
    tmp="$HOME/Downloads/mzsh.zip"
    curl -LGfsSL https://github.com/mrgnw/mzsh/archive/master.zip -o "$tmp" &&
        unzip -j "$tmp" -d ~/.zsh &&
        rm -f "$tmp"

    if ! grep -q mzsh ~/.zshrc; then
        cat ~/.zsh/init/zshrc_template >>~/.zshrc
    else
        echo "~/.zshrc already contains mzsh"
    fi
}

# download both at the same time
download_repo &
sh -c "$(curl -fsSL https://raw.githubusercontent.com/zdharma/zplugin/master/doc/install.sh)"

# Step 2: Run the full install process
echo ""
echo "To run set up scripts, open a new terminal and type:"
echo "mzsh"
